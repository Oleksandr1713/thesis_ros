<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="include_signs" default="false"/>

    <include file="$(find rosbot_description)/launch/rosbot_gazebo.launch"></include>

    <include unless="$(arg include_signs)" file="$(find rosbot_gazebo)/launch/maze_world.launch"></include>

    <include if="$(arg include_signs)" file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find simulation)/worlds/maze_with_signs.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

</launch>